{
  "name": "::System User Setting",
  "version": "1.0.0",
  "decription": "System User Setting",
  "action": {
    "bind": {
      "model": "xiang.user",
      "option": {
        "form": "yao.user"
      }
    }
  },
  "layout": {
    "filter": {
      "actions": [
        {
          "action": [
            {
              "name": "HistoryPush",
              "payload": {
                "pathname": "/x/Form/yao.user/0/edit"
              },
              "type": "Common.historyPush"
            }
          ],
          "icon": "icon-plus",
          "title": "创建",
          "width": 3
        }
      ],
      "columns": [
        {
          "name": "类型"
        },
        {
          "name": "邮箱"
        }
      ]
    },
    "header": {
      "actions": [],
      "preset": {}
    },
    "table": {
      "columns": [
        {
          "name": "姓名",
          "width": 160
        },
        {
          "name": "类型",
          "width": 160
        },
        {
          "name": "邮箱",
          "width": 160
        },
        {
          "name": "手机号",
          "width": 160
        },
        {
          "name": "登录密码",
          "width": 160
        },
        {
          "name": "API Key",
          "width": 160
        },
        {
          "name": "API 密钥",
          "width": 160
        },
        {
          "name": "创建时间",
          "width": 160
        }
      ],
      "operation": {
        "actions": [
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": {
                    "model": "yao.user",
                    "type": "view"
                  }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-eye",
            "title": "查看"
          },
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": {
                    "model": "yao.user",
                    "type": "edit"
                  }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-edit-2",
            "title": "编辑"
          },
          {
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "payload": {
                  "model": "yao.user"
                },
                "type": "Table.delete"
              }
            ],
            "icon": "icon-trash-2",
            "style": "danger",
            "title": "Delete"
          }
        ],
        "width": 140
      },
      "props": {
        "scroll": {
          "x": "max-content"
        }
      }
    }
  },
  "fields": {
    "filter": {
      "类型": {
        "bind": "where.type.eq",
        "edit": {
          "props": {
            "options": [
              {
                "label": "admin",
                "value": "admin"
              },
              {
                "label": "staff",
                "value": "staff"
              },
              {
                "label": "user",
                "value": "user"
              },
              {
                "label": "robot",
                "value": "robot"
              }
            ],
            "placeholder": "请选择 类型"
          },
          "type": "Select"
        }
      },
      "邮箱": {
        "bind": "where.email.match",
        "edit": {
          "props": {
            "placeholder": "请输入 邮箱"
          },
          "type": "Input"
        }
      }
    },
    "table": {
      "API Key": {
        "bind": "key",
        "edit": {
          "props": {
            "placeholder": "请输入 API Key"
          },
          "type": "Input"
        },
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "API 密钥": {
        "bind": "secret",
        "edit": {
          "props": {
            "placeholder": "请输入 API 密钥"
          },
          "type": "Input"
        },
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "edit": {
        "props": {
          "disabled": true,
          "placeholder": "请输入 ID"
        },
        "type": "InputNumber"
      },
      "view": {
        "props": {},
        "type": "Text"
      }
    },
    "创建时间": {
      "bind": "created_at",
      "edit": {
        "props": {
          "placeholder": "请选择 创建时间",
          "showTime": {
            "format": "HH:mm:ss"
          }
        },
        "type": "DatePicker"
      },
      "view": {
        "props": {
          "format": "YYYY-MM-DD HH:mm:ss"
        },
        "type": "Text"
      }
    },
    "姓名": {
      "bind": "name",
      "edit": {
        "props": {
          "placeholder": "请输入 姓名"
        },
        "type": "Input"
      },
      "view": {
        "props": {},
        "type": "Text"
      }
    },
    "手机号": {
      "bind": "mobile",
      "edit": {
        "props": {
          "placeholder": "请输入 手机号"
        },
        "type": "Input"
      },
      "view": {
        "props": {},
        "type": "Text"
      }
    },
    "扩展信息": {
      "bind": "extra",
      "edit": {
        "props": {
          "autoSize": {
            "maxRows": 6,
            "minRows": 2
          },
          "placeholder": "请输入 扩展信息"
        },
        "type": "TextArea"
      },
      "view": {
        "props": {
          "title": "扩展信息"
        },
        "type": "Tooltip"
      }
    },
    "操作密码": {
      "bind": "password2nd",
      "edit": {
        "props": {
          "placeholder": "请输入 操作密码",
          "type": "password"
        },
        "type": "Input"
      },
      "view": {
        "props": {},
        "type": "Text"
      }
    },
    "更新时间": {
      "bind": "updated_at",
      "edit": {
        "props": {
          "placeholder": "请选择 更新时间",
          "showTime": {
            "format": "HH:mm:ss"
          }
        },
        "type": "DatePicker"
      },
      "view": {
        "props": {
          "format": "YYYY-MM-DD HH:mm:ss"
        },
        "type": "Text"
      }
    },
    "状态": {
      "bind": "status",
      "edit": {
        "props": {
          "options": [
            {
              "label": "开启",
              "value": "enabled"
            },
            {
              "label": "关闭",
              "value": "disabled"
            }
          ],
          "placeholder": "请选择 状态"
        },
        "type": "Select"
      },
      "view": {
        "props": {
          "options": [
            {
              "label": "开启",
              "value": "enabled"
            },
            {
              "label": "关闭",
              "value": "disabled"
            }
          ],
          "placeholder": "请选择 状态"
        },
        "type": "Tag"
      }
    },
    "登录密码": {
      "bind": "password",
      "edit": {
        "props": {
          "placeholder": "请输入 登录密码",
          "type": "password"
        },
        "type": "Input"
      },
      "view": {
        "props": {},
        "type": "Text"
      }
    },
    "类型": {
      "bind": "type",
      "edit": {
        "props": {
          "options": [
            {
              "label": "admin",
              "value": "admin"
            },
            {
              "label": "staff",
              "value": "staff"
            },
            {
              "label": "user",
              "value": "user"
            },
            {
              "label": "robot",
              "value": "robot"
            }
          ],
          "placeholder": "请选择 类型"
        },
        "type": "Select"
      },
      "view": {
        "props": {
          "options": [
            {
              "label": "admin",
              "value": "admin"
            },
            {
              "label": "staff",
              "value": "staff"
            },
            {
              "label": "user",
              "value": "user"
            },
            {
              "label": "robot",
              "value": "robot"
            }
          ],
          "placeholder": "请选择 类型"
        },
        "type": "Tag"
      }
    },
    "身份证号码": {
      "bind": "idcard",
      "edit": {
        "props": {
          "placeholder": "请输入 身份证号码"
        },
        "type": "Input"
      },
      "view": {
        "props": {},
        "type": "Text"
      }
    },
    "邮箱": {
      "bind": "email",
      "edit": {
        "props": {
          "placeholder": "请输入 邮箱"
        },
        "type": "Input"
      },
      "view": {
        "props": {},
        "type": "Text"
      }
    }
  }
}
