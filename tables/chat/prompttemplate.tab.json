{
  "name": "::Prompt Template",
  "action": {
    "bind": {
      "model": "chat.prompttemplate",
      "option": { "form": "chat.prompttemplate", "withs": {} }
    }
  },
  "config": { "full": true },
  "layout": {
    "header": { "actions": [], "preset": {} },
    "primary": "id",
    "filter": {
      "actions": [
        {
          "action": [
            {
              "name": "HistoryPush",
              "payload": { "pathname": "/x/Form/chat.prompttemplate/0/edit" },
              "type": "Common.historyPush"
            }
          ],
          "icon": "icon-plus",
          "title": "创建",
          "width": 3
        }
      ],
      "columns": [{ "name": "提示" }]
    },
    "table": {
      "columns": [
        { "name": "ID", "width": 50 },
        { "name": "提示", "width": 160 },
        { "name": "模板内容", "width": 260 },
        { "name": "状态", "width": 80 },
        { "name": "创建时间", "width": 160 },
        { "name": "更新时间", "width": 160 }
      ],
      "operation": {
        "actions": [
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": { "model": "chat.prompttemplate", "type": "view" }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-eye",
            "title": "查看"
          },
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": { "model": "chat.prompttemplate", "type": "edit" }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-edit-2",
            "title": "编辑"
          },
          {
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "payload": { "model": "chat.prompttemplate" },
                "type": "Table.delete"
              },
              {
                "name": "Back",
                "type": "Common.closeModal",
                "payload": {}
              }
            ],
            "icon": "icon-trash-2",
            "style": "danger",
            "title": "Delete"
          }
        ],
        "width": 140
      },
      "props": { "scroll": { "x": "max-content" } }
    }
  },
  "fields": {
    "filter": {
      "提示": {
        "bind": "where.title.match",
        "edit": { "props": { "placeholder": "请输入 提示" }, "type": "Input" }
      }
    },
    "table": {
      "ID": {
        "bind": "id",
        "view": { "props": {}, "type": "Text" }
      },
      "创建时间": {
        "bind": "created_at",
        "view": { "props": { "format": "YYYY-MM-DD HH:mm:ss" }, "type": "Text" }
      },
      "提示": {
        "bind": "title",
        "view": { "props": {}, "type": "Text" }
      },
      "更新时间": {
        "bind": "updated_at",
        "view": { "props": { "format": "YYYY-MM-DD HH:mm:ss" }, "type": "Text" }
      },
      "模板内容": {
        "bind": "content",
        "view": {
          "props": { "title": "模板内容" },
          "type": "Text",
          "compute": "scripts.text.Cut"
        }
      }
    }
  }
}
