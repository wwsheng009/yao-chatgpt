{
  "name": "::Chat Message",
  "action": {
    "bind": {
      "model": "chat.message",
      "option": { "form": "chat.message_simple", "withs": {} }
    }
  },
  "layout": {
    "filter": {
      "actions": [
        {
          "action": [
            {
              "name": "HistoryPush",
              "payload": { "pathname": "/x/Form/chat.message_simple/0/edit" },
              "type": "Common.historyPush"
            }
          ],
          "icon": "icon-plus",
          "title": "创建",
          "width": 3
        }
      ],
      "columns": [{ "name": "发送的消息" }]
    },
    "header": { "actions": [], "preset": {} },
    "primary": "id",
    "table": {
      "columns": [
        { "name": "ID", "width": 50 },
        { "name": "发送的消息", "width": 160 },
        { "name": "回复的消息", "width": 260 },
        { "name": "请求时间(秒)", "width": 50 }
      ],
      "operation": {
        "actions": [
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": { "model": "chat.message_simple", "type": "view" }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-eye",
            "title": "查看"
          },
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": { "model": "chat.message_simple", "type": "edit" }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-edit-2",
            "title": "编辑"
          },
          {
            "action": [
              {
                "name": "Delete",
                "payload": { "model": "chat.message_simple" },
                "type": "Table.delete"
              }
            ],
            "confirm": {
              "desc": "请确认删除，删除后数据无法恢复",
              "title": "确认"
            },
            "icon": "icon-trash-2",
            "style": "danger",
            "title": "Delete"
          }
        ],
        "width": 140
      },
      "props": { "scroll": { "x": "max-content" } }
    }
  },
  "fields": {
    "filter": {
      "发送的消息": {
        "bind": "where.prompt.match",
        "edit": {
          "props": { "placeholder": "请输入 发送的消息" },
          "type": "Input"
        }
      }
    },
    "table": {
      "ID": {
        "bind": "id",
        "view": { "props": {}, "type": "Text" }
      },
      "发送的消息": {
        "bind": "prompt",
        "view": {
          "props": { "title": "发送的消息" },
          "type": "Text",
          "compute": "scripts.text.Cut"
        }
      },
      "回复的消息": {
        "bind": "completion",
        "view": {
          "props": { "title": "回复的消息" },
          "type": "Text",
          "compute": "scripts.text.Cut"
        }
      },

      "请求时间(秒)": {
        "bind": "request_total_time",
        "view": { "props": {}, "type": "Text" }
      }
    }
  },
  "config": { "full": true }
}
