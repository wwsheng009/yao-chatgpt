{
  "name": "::Chat Conversation",
  "action": {
    "bind": {
      "model": "chat.conversation",
      "option": { "withs": "chat.message" }
    }
  },
  "layout": {
    "actions": [
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          { "name": "CloseModal", "type": "Common.closeModal", "payload": {} }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          { "name": "Submit", "type": "Form.submit", "payload": {} },
          { "name": "Back", "type": "Common.closeModal", "payload": {} }
        ]
      },
      {
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "确认删除",
              "content": "删除后不可撤销！"
            }
          },
          {
            "name": "Delete",
            "payload": { "model": "chat.conversation" },
            "type": "Form.delete"
          },
          { "name": "Back", "type": "Common.closeModal", "payload": {} }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            { "name": "ID", "width": 6 },
            { "name": "创建时间", "width": 6 },
            { "name": "会话ID", "width": 12 },
            { "name": "标题", "width": 24 },
            { "name": "消息列表", "width": 24 }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "ID": {
        "bind": "id",
        "edit": {
          "props": { "disabled": true, "placeholder": "请输入 ID" },
          "type": "InputNumber"
        }
      },
      "会话ID": {
        "bind": "uuid",
        "edit": {
          "props": { "placeholder": "请输入 会话ID" },
          "type": "Input"
        },
        "view": { "props": {}, "type": "" }
      },
      "创建时间": {
        "bind": "created_at",
        "edit": {
          "props": {
            "placeholder": "请选择 创建时间",
            "showTime": { "format": "HH:mm:ss" }
          },
          "type": "DatePicker"
        }
      },
      "标题": {
        "bind": "title",
        "edit": { "props": { "placeholder": "请输入 标题" }, "type": "Input" },
        "view": { "props": {}, "type": "Text" }
      },
      "消息列表": {
        "edit": {
          "props": {
            "model": "chat.message_simple",
            "query": {
              "select": "id,prompt,completion,request_total_time",
              "where.conversation_id.eq": "{{id}}"
            }
          },
          "type": "Table"
        }
      }
    }
  },
  "config": { "full": true }
}
